{
  "name": "Task",
  "type": "object",
  "properties": {
    "titulo_demanda": {
      "type": "string",
      "description": "Task title"
    },
    "descricao": {
      "type": "string",
      "description": "Task description"
    },
    "status_demanda": {
      "type": "string",
      "enum": [
        "Pendente",
        "Em Andamento",
        "Aguardando Revisao",
        "Concluida",
        "Pausada"
      ],
      "default": "Pendente",
      "description": "Task status"
    },
    "data_limite": {
      "type": "string",
      "format": "date",
      "description": "Due date"
    },
    "pontos_gamificacao_associados": {
      "type": "number",
      "default": 0,
      "description": "Associated gamification points"
    },
    "id_padrinho_responsavel": {
      "type": "string",
      "description": "Responsible mentor ID"
    },
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high",
        "urgent"
      ],
      "default": "medium",
      "description": "Task priority"
    }
  },
  "required": []
}